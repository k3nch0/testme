{{ 'section-cta-banner.css' | asset_url | stylesheet_tag }}

<div class="cta ctaBanner ctaBanner--aligned-{{ section.settings.info_alignment }} ctaBanner--{{ section.settings.cta_height }}">
  {%- if section.settings.image != blank -%}
    <img srcset="{%- if section.settings.image.width >= 165 -%}{{ section.settings.image | img_url: '165x' }} 165w,{%- endif -%}
      {%- if section.settings.image.width >= 360 -%}{{ section.settings.image | img_url: '360x' }} 360w,{%- endif -%}
      {%- if section.settings.image.width >= 535 -%}{{ section.settings.image | img_url: '535x' }} 535w,{%- endif -%}
      {%- if section.settings.image.width >= 720 -%}{{ section.settings.image | img_url: '720x' }} 720w,{%- endif -%}
      {%- if section.settings.image.width >= 940 -%}{{ section.settings.image | img_url: '940x' }} 940w,{%- endif -%}
      {%- if section.settings.image.width >= 1070 -%}{{ section.settings.image | img_url: '2000x' }} 2000w{%- endif -%}"
      src="{{ section.settings.image | img_url: '533x' }}"
      sizes="(min-width: 1100px) 2000px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
      alt="{{ section.settings.image.alt | escape }}"
      loading="lazy"
      width="{{ section.settings.image.width }}"
      height="{{ section.settings.image.height }}"
      class="ctaBanner__bg"
    >
  {%- else -%}
    {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
  {%- endif -%}
  {% assign overlay_opacity = section.settings.overlay_opacity | divided_by: 100.00 %}
  <div class="ctaBanner__content-container" style="background-color: {{ section.settings.background_color | color_modify: 'alpha', overlay_opacity }}">
    <div class="ctaBanner__info">
      {%- for block in section.blocks -%}
        {% case block.type %}
          {%- when 'heading' -%}
            <h2 class="ctaBanner__title ctaBanner__title--{{- block.settings.title_size -}}" style="color: {{ block.settings.title_text_color }}">
              {{ block.settings.title | escape }}
            </h2>
          {%- when 'description' -%}
            <h2 class="ctaBanner__description ctaBanner__description--{{- block.settings.description_size -}}" style="color: {{ block.settings.description_text_color }}">
              {{ block.settings.description | escape }}
            </h2>
          {%- when 'button' -%}
            {%- if block.settings.button_label != blank -%}
              <a href="{{ block.settings.button_link }}" class="button-transparent" {{ block.shopify_attributes }}>
                {{ block.settings.button_label | escape }}
              </a>
            {%- endif -%}
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "CTA Banner [H2]",
  "class": "spaced-section spaced-section--full-width",
  "settings": [
    {
      "type": "header",
      "content": "CTA Banner Layout",
      "info": "CTA Image: (Width: 1600px)"
    },
    {
      "type": "select",
      "id": "cta_height",
      "options": [
        {
          "value": "25vh",
          "label": "Half - (Height: --px)"
        },
        {
          "value": "40vh",
          "label": "Full - (Height: --px)"
        }
      ],
      "default": "40vh",
      "label": "Banner Height"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Banner Image"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Overlay Color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 100,
      "step": 1,
      "label": "Overlay Opacity",
      "default": 35
    },
    {
      "type": "select",
      "id": "info_alignment",
      "options": [
        {
          "value": "left",
          "label": "Left Side"
        },
        {
          "value": "center",
          "label": "Centered"
        },
        {
          "value": "right",
          "label": "Right Side"
        }
      ],
      "default": "center",
      "label": "Info Alignment"
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "H2 Title",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "H2 Title",
          "default": "H2 Title"
        },
        {
          "type": "select",
          "id": "title_size",
          "options": [
            {
              "value": "fontsmallTitle",
              "label": "Small"
            },
            {
              "value": "fontmediumTitle",
              "label": "Medium"
            },
            {
              "value": "fontlargeTitle",
              "label": "Large"
            },
            {
              "value": "fontxlargeTitle",
              "label": "Extra Large"
            }
          ],
          "default": "fontmediumTitle",
          "label": "Text Size"
        },
        {
          "type": "color",
          "id": "title_text_color",
          "label": "Text Color",
          "default": "#FFFFFF"
        }
      ]
    },
    {
      "type": "description",
      "name": "H3 Description",
      "limit": 1,
      "settings": [
        {
          "type": "textarea",
          "id": "description",
          "label": "Description/Slogan",
          "default": "Welcome to Thrasio Theme! This is a new theme to promote your brand and amazing products!"
        },
        {
          "type": "select",
          "id": "description_size",
          "options": [
            {
              "value": "fontsmallDescription",
              "label": "Small"
            },
            {
              "value": "fontmediumDescription",
              "label": "Medium"
            },
            {
              "value": "fontlargeDescription",
              "label": "Large"
            }
          ],
          "default": "fontsmallDescription",
          "label": "Text Size"
        },
        {
          "type": "color",
          "id": "description_text_color",
          "label": "Text Color",
          "default": "#FFFFFF"
        }
      ]
    },
    {
      "type": "button",
      "name": "Button",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "button_label",
          "default": "Button Label",
          "label": "t:sections.image-with-text.blocks.button.settings.button_label.label",
          "info": "For Good SEO, make Button Label descriptive."
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "CTA Banner [H2]",
      "blocks": [
        {
          "type": "heading"
        },
        {
          "type": "description"
        },
        {
          "type": "button"
        }
      ]
    }
  ]
}
{% endschema %}
