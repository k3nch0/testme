{{ 'section-hero2.css' | asset_url | stylesheet_tag }}

<div class="hero hero2 hero2--{{ section.settings.hero_height }}">
  <div class="hero2__collection1">
    {%- if section.settings.first_image != blank -%}
        <img srcset="{%- if section.settings.image.width >= 165 -%}{{ section.settings.first_image | img_url: '165x' }} 165w,{%- endif -%}
        {%- if section.settings.first_image.width >= 360 -%}{{ section.settings.first_image | img_url: '360x' }} 360w,{%- endif -%}
        {%- if section.settings.first_image.width >= 535 -%}{{ section.settings.first_image | img_url: '535x' }} 535w,{%- endif -%}
        {%- if section.settings.first_image.width >= 720 -%}{{ section.settings.first_image | img_url: '720x' }} 720w,{%- endif -%}
        {%- if section.settings.first_image.width >= 940 -%}{{ section.settings.first_image | img_url: '940x' }} 940w,{%- endif -%}
        {%- if section.settings.first_image.width >= 1070 -%}{{ section.settings.first_image | img_url: '2000x' }} 2000w{%- endif -%}"
        src="{{ section.settings.first_image | img_url: '533x' }}"
        sizes="(min-width: 1100px) 2000px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
        alt="{{ section.settings.first_image.alt | escape }}"
        loading="lazy"
        width="{{ section.settings.first_image.width }}"
        height="{{ section.settings.first_image.height }}"
        className="hero2__bg"
        >
    {%- else -%}
        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
    {%- endif -%}
    {% assign first_opacity = section.settings.first_opacity | divided_by: 100.00 %}
    <div class="hero2__content-container" style="background-color: {{ section.settings.first_backgroundcolor | color_modify: 'alpha', first_opacity }}">
      <div class="hero2__info">
        {%- if section.settings.first_button_label != blank -%}
            <a href="{{ section.settings.first_button_link }}" class="hero2__button hero2__button--{{- section.settings.button_type -}}" {{ section.shopify_attributes }}>{{ section.settings.first_button_label | escape }}</a>
        {%- endif -%}
      </div>
    </div>
  </div>

  <div class="hero2__collection2">
    {%- if section.settings.second_image != blank -%}
        <img srcset="{%- if section.settings.second_image.width >= 165 -%}{{ section.settings.second_image | img_url: '165x' }} 165w,{%- endif -%}
        {%- if section.settings.second_image.width >= 360 -%}{{ section.settings.second_image | img_url: '360x' }} 360w,{%- endif -%}
        {%- if section.settings.second_image.width >= 535 -%}{{ section.settings.second_image | img_url: '535x' }} 535w,{%- endif -%}
        {%- if section.settings.second_image.width >= 720 -%}{{ section.settings.second_image | img_url: '720x' }} 720w,{%- endif -%}
        {%- if section.settings.second_image.width >= 940 -%}{{ section.settings.second_image | img_url: '940x' }} 940w,{%- endif -%}
        {%- if section.settings.second_image.width >= 1070 -%}{{ section.settings.second_image | img_url: '2000x' }} 2000w{%- endif -%}"
        src="{{ section.settings.second_image | img_url: '533x' }}"
        sizes="(min-width: 1100px) 2000px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
        alt="{{ section.settings.second_image.alt | escape }}"
        loading="lazy"
        width="{{ section.settings.second_image.width }}"
        height="{{ section.settings.second_image.height }}"
        className="hero2__bg"
        >
    {%- else -%}
        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
    {%- endif -%}
    {% assign second_opacity = section.settings.second_opacity | divided_by: 100.00 %}
    <div class="hero2__content-container" style="background-color: {{ section.settings.second_backgroundcolor | color_modify: 'alpha', second_opacity }}">
      <div class="hero2__info">
        {%- if section.settings.second_button_label != blank -%}
            <a href="{{ section.settings.second_button_link }}" class="hero2__button" {{ section.shopify_attributes }}>{{ section.settings.second_button_label | escape }}</a>
        {%- endif -%}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Hero Option 2 [2 Images]",
  "class": "spaced-section spaced-section--full-width",
  "settings": [
    {
      "type": "select",
      "id": "hero_height",
      "options": [
        {
          "value": "50vh",
          "label": "50%"
        },
        {
          "value": "75vh",
          "label": "75%"
        },
        {
          "value": "82vh",
          "label": "82%"
        },
        {
          "value": "100vh",
          "label": "100%"
        }
      ],
      "default": "100vh",
      "label": "Hero Height"
    },
    {
      "type": "image_picker",
      "id": "first_image",
      "label": "Left Hero Image"
    },
    {
      "type": "color",
      "id": "first_backgroundcolor",
      "label": "Left Background Color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "first_opacity",
      "min": 0,
      "max": 100,
      "step": 1,
      "label": "Color Overlay Opacity",
      "default": 50
    },
    {
      "type": "text",
      "id": "first_button_label",
      "default": "Button Label",
      "label": "Left Button Label",
      "info": "Enter a name for the button"
    },
    {
      "type": "url",
      "id": "first_button_link",
      "label": "Button Link"
    },
    {
        "type": "image_picker",
        "id": "second_image",
        "label": "Right Hero Image"
      },
      {
        "type": "color",
        "id": "second_backgroundcolor",
        "label": "Right Background Color",
        "default": "#000000"
      },
      {
        "type": "range",
        "id": "second_opacity",
        "min": 0,
        "max": 100,
        "step": 1,
        "label": "Color Overlay Opacity",
        "default": 50
      },
      {
        "type": "text",
        "id": "second_button_label",
        "default": "Button Label",
        "label": "Right Button Label",
        "info": "Enter a name for the button"
      },
      {
        "type": "url",
        "id": "second_button_link",
        "label": "Button Link"
      }
  ],
  "presets": [
    {
      "name": "Hero Option 2 [2 Images]"
    }
  ]
}
{% endschema %}