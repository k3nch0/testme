{{ 'section-collection-types.css' | asset_url | stylesheet_tag }}
<div class="collection collection_types">
	<div class="container">
		<div class="row">
      <h3 class="title{% if section.settings.title == blank %} title--no-heading{% endif %} {{ section.settings.info_alignment }} {{- section.settings.title_size -}}" style="color: {{ section.settings.title_text_color }}">{{ section.settings.title | escape }}</h3>
			{%- for block in section.blocks -%}
			<div class="{{ section.settings.sm_col }} {{ section.settings.med_col }} {{ section.settings.lg_col }} {{ section.settings.xl_col }}">
				<div class="collection_types__collection-item">
					{% assign opacity = section.settings.opacity | divided_by: 100.00 %}
					<div class="collection_types__product-img collection_types__product-img--{{section.settings.container_shape}} collection_types__product-img--contain" 
					style="background-color: {{ section.settings.backgroundcolor | color_modify: 'alpha', opacity  }}">
						
						{%- if block.settings.collection.image != blank -%}
						  <a href="{{block.settings.collection.url}}" class="img-link">
								<img srcset="{%- if block.settings.collection.image.width >= 165 -%}{{ block.settings.collection.image  | img_url: '165x' }} 165w,{%- endif -%}
									{%- if block.settings.collection.image.width >= 360 -%}{{ block.settings.collection.image | img_url: '360x' }} 360w,{%- endif -%}
									{%- if block.settings.collection.image.width >= 535 -%}{{ block.settings.collection.image | img_url: '535x' }} 535w,{%- endif -%}
									{%- if block.settings.collection.image.width >= 720 -%}{{ block.settings.collection.image | img_url: '720x' }} 720w,{%- endif -%}
									{%- if block.settings.collection.image.width >= 940 -%}{{ block.settings.collection.image | img_url: '940x' }} 940w,{%- endif -%}
									{%- if block.settings.collection.image.width >= 1070 -%}{{ block.settings.collection.image | img_url: '2000x' }} 2000w{%- endif -%}"
									src="{{ block.settings.collection.image | img_url: '533x' }}"
									sizes="(min-width: 1100px) 2000px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
									alt="{{ block.settings.collection.image.alt | escape }}"
									loading="lazy"
									width="{{ block.settings.collection.image.width }}"
									height="{{ block.settings.collection.image.height }}"
									class="hero1__bg"
								>
							</a>
						{%- else -%}
							{{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
						{%- endif -%}
					</div>
					<div class="collection_types__product-info">
						<div class="collection_types__product-details" style="text-align: center; width: 100%;">
							{%- if section.settings.show_collection_title == true -%}
							<span class="collection_types__product-title" >
								{{ block.settings.collection.title }}
							</span>
							{%- endif -%}
						</div>
					</div>
				</div>
			</div>
			{%- endfor -%}
		</div>
	</div>
</div>
  
